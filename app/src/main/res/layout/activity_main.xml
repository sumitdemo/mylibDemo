<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="@string/openWebViewOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openWebViewOverlay"
        android:onClick="openWebViewOverlay"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:clickable="true"/>

    <Button
        android:text="@string/openWebViewOverlayWithTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openWebViewOverlayWithTitle"
        android:onClick="openWebViewOverlayWithTitle"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:clickable="true"/>
</LinearLayout>